<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_plausibility_check_form" model="ir.ui.view">
        <field name="name">plausibility.check.form</field>
        <field name="model">plausibility.check</field>
        <field name="arch" type="xml">
            <form string="Plausibility Check">
                <sheet>
                    <group>
                        <field name="customer_requirement_id"/>
                        <field name="state"/>
                    </group>
                    <footer>
                        <button name="validate_requirement" string="Validate Requirement" type="object" class="btn-primary"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>
</odoo>

<odoo>
    <record id="wizard_send_message_view_form" model="ir.ui.view">
        <field name="name">wizard.send.message.view.form</field>
        <field name="model">wizard.send.message</field>
        <field name="arch" type="xml">
            <form string="Send Messages">
                <sheet>
                    <group>
                        <field name="content" nolabel="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send" string="Send" type="object" class="oe_highlight" data-hotkey="q"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

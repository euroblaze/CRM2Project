<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="inherit.web.LegacyAdaptedActionDialogFooter" t-inherit="web.LegacyAdaptedActionDialogFooter" t-inherit-mode="extension" owl="1">
        <xpath expr="//button" position="replace">
            <t t-if="props.actionProps.type === 'formio_form' and props.actionProps.context.formio_crm">
                <button id="button_close" class="btn btn-primary" t-on-click="close">
                  <t>Close</t>
                </button>
                <t t-if="props.actionProps.context.show_button">
                    <button class="btn btn-primary" t-on-click="_sendToPm">
                        <t>Send to project manager</t>
                    </button>
                </t>
            </t>
            <t t-elif="props.actionProps.type === 'formio_form' and props.actionProps.context.formio_project">
                <button id="button_close" class="btn btn-primary" t-on-click="close">
                  <t>Close</t>
                </button>
                <button class="btn btn-primary" t-on-click="_actionMarkField">
                  <t>Mark incorrectly fields</t>
                </button>
            </t>
            <t t-else="">
                <button class="btn btn-primary" t-on-click="close">
                  <t>Ok</t>
                </button>
            </t>
        </xpath>
    </t>

    <t t-name="CRM2Project.pickField">
        <div>
            <table class="table table-bordered table-hover text-center text-break">
                <thead>
                    <tr>
                        <th style="width: 40%" scope="col">Text</th>
                        <th style="width: 50%" scope="col">Value</th>
                        <th style="width: 10%" scope="col">Check box</th>
                    </tr>
                </thead>
                <tbody>
                    <tr t-foreach="listData" t-as="data" class="text-left">
                        <td t-if="data.parent_label">
                            <t t-esc="data.label"/> (<t t-esc="data.parent_label"/>)
                        </td>
                        <td t-else="" t-esc="data.label" class="align-middle"/>
                        <t t-if="data.type === 'selectboxes'">
                            <td class="d-flex">
                                <div t-foreach="data.value" t-as="value" class="form-check m-1" style="pointer-events: none">
                                    <input type="checkbox" t-att-id="value" class="form-check-input" t-att-checked="value_value ? true : undefined"/>
                                    <label t-att-for="value" class="form-check-label "><t t-esc="value"/></label>
                                </div>
                            </td>
                        </t>

                        <t t-else="">
                            <td>
                                <img t-if="data.type === 'signature'" t-attf-src="#{data.value}" class="img-fluid"/>
                                <t t-elif="data.type === 'datetime'">
                                    <t t-set="time" t-value="new Date(data.value)"/>
                                    <t t-set="value" t-value="time.toLocaleString()"/>
                                    <t t-esc="value"/>
                                </t>
                                <t t-elif="data.type === 'currency'">
                                    <t t-esc="data.value.toLocaleString('en-US', {'style': 'currency','currency': data.currency})"/>
                                </t>
                                <t t-elif="data.type === 'survey'">
                                    <table class="table text-center text-break">
                                        <tbody>
                                            <tr t-foreach="data.value" t-as="value">
                                                <td t-esc="value"/>
                                                <td t-esc="value_value"/>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                                <t t-elif="data.type === 'datamap'">
                                    <table class="table text-center text-break">
                                        <thead>
                                            <th><strong>Key</strong></th>
                                            <th><strong>Value</strong></th>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="data.value" t-as="value">
                                                <td t-esc="value"/>
                                                <td t-esc="value_value"/>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                                <t t-elif="data.type === 'datagrid' or data.type === 'editgrid'">
                                    <table class="table text-center text-break">
                                        <thead>
                                            <tr>
                                                <th t-foreach="data.value[0]" t-as="key"><t t-esc="key_value"/></th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr t-foreach="data.value[1]" t-as="value">
                                                <t t-foreach="data.value[0]" t-as="key">
                                                    <td t-esc="value[key]"/>
                                                </t>
                                            </tr>
                                        </tbody>
                                    </table>
                                </t>
                                <t t-else="" t-esc="data.value"/>
                            </td>
                        </t>
                        <td class="text-center align-middle"><input type="checkbox" class="check-box" t-attf-id="{{data.key}}"/></td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <textarea id="note" placeholder="Add your note here"></textarea>
        </div>
    </t>
</templates>
